<Window x:Class="_420_14B_FX_A25_TP1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_420_14B_FX_A25_TP1"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="900" Loaded="Window_Loaded">

    <TabControl Margin="10">
        <TabItem Header="Animaux">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="37*"/>
                    <ColumnDefinition Width="380*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Zone recherche -->
                    <RowDefinition Height="Auto"/>
                    <!-- Liste animaux -->
                    <RowDefinition Height="Auto"/>
                    <!-- Formulaire + boutons -->
                </Grid.RowDefinitions>

                <!-- Zone de recherche -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" Grid.ColumnSpan="2">
                    <Label Content="Rechercher :" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtRecherche" Width="200" Margin="5,0"/>
                    <Label Content="Statut :" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <ComboBox x:Name="cboFiltreStatuAdoption" Width="75" Margin="5,0">
                        <ComboBoxItem Content="Tous" IsSelected="True"/>
                        <ComboBoxItem Content="Disponible"/>
                        <ComboBoxItem Content="Adopté"/>
                    </ComboBox>
                    <Label Content="Espèce :" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <ComboBox x:Name="cboFiltreEspeceAnimal" Width="100" Margin="5,0">
                        <ComboBoxItem Content="Tous" IsSelected="True"/>
                    </ComboBox>
                    <Button x:Name="btnRechercher" Width="75" Content="Rechercher" Margin="10,0" />
                    <Button x:Name="btnEffacer" Width="75" Content="Effacer" Margin="10,0"/>
                </StackPanel>

                <!--  Liste des animaux  -->
                <ListBox x:Name="lstAnimaux" Grid.Row="1"
             Height="115"
             FontFamily="Courier New" 
             FontSize="14"  Grid.ColumnSpan="2" Margin="0,13,0,12"/>

                <!--  Formulaire + boutons  -->
                <Grid Grid.Row="2" Margin="0,10,0,0" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Zone Animal -->
                    <GroupBox Header="Animal" Margin="0,0,10,0" Grid.Column="0">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <Label Content="Nom" Width="125"/>
                                <TextBox x:Name="txtNom" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                                <Label Content="Espèce" Width="125"/>
                                <ComboBox x:Name="cboEspece" Width="150">

                                </ComboBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                                <Label Content="Date de naissance" Width="125"/>
                                <DatePicker x:Name="dpDateNaissance" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                                <Label Content="Poids (kg)" Width="125"/>
                                <TextBox x:Name="txtPoids" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                                <Label Content="Prix" Width="125"/>
                                <TextBox x:Name="txtPrix" Width="150"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                                <Label Content="Statut" Width="125"/>
                                <ComboBox x:Name="cboStatut" Width="150">
                                    <ComboBoxItem Content="Disponible"/>
                                    <ComboBoxItem Content="Adopté"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel   Margin="0,0,0,5" HorizontalAlignment="Left">
                                <Label Content="Description" Width="125" HorizontalAlignment="Left"/>
                                <TextBox Name="txtDescription" Width="270" Height="50" Margin="5,0,0,0" AcceptsReturn="True"></TextBox>


                            </StackPanel>


                        </StackPanel>
                    </GroupBox>

                    <!-- Zone Adoptant -->
                    <GroupBox Header="Adoptant" Margin="0,0,10,0" Grid.Column="1">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                                <Label Content="Nom"  Width="120"/>
                                <TextBox x:Name="txtNomAdoptant" Width="150"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                                <Label Content="Prénom"  Width="120"/>
                                <TextBox x:Name="txtPrenomAdoptant" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                                <Label Content="Téléphone"  Width="120"/>
                                <TextBox x:Name="txtTelephoneAdoptant" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                                <Label Content="Courriel"  Width="120"/>
                                <TextBox x:Name="txtCourrielAdoptant" Width="150"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                                <Label Content="Date d'adoption"  Width="120"/>
                                <TextBox x:Name="txtDateAdoption" Width="150" IsReadOnly="true"/>
                            </StackPanel>
                            <StackPanel>
                                <Button x:Name="btnAdopter" Content="Adopter" Margin="0,5" IsEnabled="False"/>

                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Boutons -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Bottom">
                        <Button x:Name="btnSauvegarder" Content="Sauvegarder" Margin="0,5" />
                        <Button x:Name="btnQuitter" Content="Quitter" Margin="0,5"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </TabItem>
        <TabItem Header="Statistiques">
            <StackPanel Orientation="Horizontal" Margin="10">
                <StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Nb. Chiens" Width="125"/>
                        <TextBox x:Name="txtNbChiens" Width="150"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Nb. Chats" Width="125"/>
                        <TextBox x:Name="txtNbChats" Width="150"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Nb. Lapins" Width="125"/>
                        <TextBox x:Name="txtNbLapins" Width="150"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Nb. Oiseaux" Width="125"/>
                        <TextBox x:Name="txtNbOiseaux" Width="150"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Nb. Poissons" Width="125"/>
                        <TextBox x:Name="txtNbPoissons" Width="150"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Nb. Rongeurs" Width="125"/>
                        <TextBox x:Name="txtNbRongeurs" Width="150"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Nb. Reptiles" Width="125"/>
                        <TextBox x:Name="txtNbReptiles" Width="150"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Nb. Furets" Width="125"/>
                        <TextBox x:Name="txtNbFurets" Width="150"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Nb. Autres" Width="125"/>
                        <TextBox x:Name="txtNbAutres" Width="150"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="20,0,0,0">
                    <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                        <Label Content="Nb. animaux disponibles" Width="150"/>
                        <TextBox x:Name="txtNbAnimauxDisponibles" Width="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                        <Label Content="Nb. animaux adoptés" Width="150"/>
                        <TextBox x:Name="txtNbAnimauxAdoptes" Width="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                        <Label Content="Prix moyen d'adoption" Width="150"/>
                        <TextBox x:Name="txtPrixMoyenAdoption" Width="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                        <Label Content="Durée du séjour moyen " Width="150"/>
                        <TextBox x:Name="txtDureeSejourMoyen" Width="150"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"  Margin="0,0,0,5">
                        <Label Content="Revenu total " Width="150"/>
                        <TextBox x:Name="txtRevenuTotal" Width="150"/>
                    </StackPanel>
                </StackPanel>
               
    


            </StackPanel>
        </TabItem>
    </TabControl>

</Window>
